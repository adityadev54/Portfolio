@model GoldenMenu.Models.Auth.ChangePasswordViewModel

@using (Html.BeginForm("ChangePassword", "Settings", FormMethod.Post, new { @id = "changePwdForm", @class = "space-y-5" }))
{
    <div class="flex flex-col">
        @Html.LabelFor(m => m.OldPassword, new { @class = "block text-sm font-medium text-gray-700" })
        <div class="mt-1">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border border-gray-300 rounded-md p-2.5" })
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-red-500 text-xs italic" })
        </div>
    </div>

    <div class="flex flex-col">
        @Html.LabelFor(m => m.NewPassword, new { @class = "block text-sm font-medium text-gray-700" })
        <div class="mt-1">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border border-gray-300 rounded-md p-2.5" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-red-500 text-xs italic" })
        </div>
    </div>

    <div class="flex flex-col">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "block text-sm font-medium text-gray-700" })
        <div class="mt-1">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border border-gray-300 rounded-md p-2.5" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-500 text-xs italic" })
        </div>
    </div>

    <div class="flex justify-end mt-6">
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-500 hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
            Change Password
        </button>
    </div>

    @if (ViewBag.PasswordMessage != null)
    {
        <div class="mt-4 p-3 bg-green-100 border border-green-300 text-green-800 rounded-md">
            @ViewBag.PasswordMessage
        </div>
    }
}