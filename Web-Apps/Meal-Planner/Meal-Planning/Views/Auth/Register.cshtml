@{
    ViewData["Title"] = "Register";
}

<style>
    .glass {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .fade-in-up {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
    }

    @@keyframes fadeInUp {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<!-- Background -->
<div class="bg-gradient-to-br from-white via-gray-100 to-green-100 min-h-screen flex items-center justify-center px-4 text-black">

    <!-- Form Container -->
    <div class="relative w-full max-w-md rounded-3xl shadow-xl glass p-8 fade-in-up">

        <!-- Header Section -->
        <div class="text-center mb-6">
            <h2 class="text-3xl font-bold text-black tracking-tight">Create Your Account</h2>
            <p class="text-sm text-gray-600">Sign up to get started with Golden Menu</p>
        </div>

        <!-- Register Form -->
        <form method="post" action="/User/Register" class="space-y-6">

            <!-- First + Last Name Row -->
            <div class="flex space-x-4">
                <div class="w-1/2">
                    <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-1">First Name</label>
                    <input type="text" id="firstName" name="FirstName"
                           class="w-full py-3 px-4 bg-white bg-opacity-60 text-black rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-300 focus:outline-none text-sm transition duration-200"
                           placeholder="John" required>
                </div>

                <div class="w-1/2">
                    <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-1">Last Name</label>
                    <input type="text" id="lastName" name="LastName"
                           class="w-full py-3 px-4 bg-white bg-opacity-60 text-black rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-300 focus:outline-none text-sm transition duration-200"
                           placeholder="Doe" required>
                </div>
            </div>

            <!-- Email -->
            <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
                <input type="email" id="email" name="Email"
                       class="w-full py-3 px-4 bg-white bg-opacity-60 text-black rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-300 focus:outline-none text-sm transition duration-200"
                       placeholder="you@example.com" required>
            </div>

            <!-- Password -->
            <div>
                <label for="password" class="block text-sm font-semibold text-gray-700 mb-1">Password</label>
                <input type="password" id="password" name="password"
                       class="w-full py-3 px-4 bg-white bg-opacity-60 text-black rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-300 focus:outline-none text-sm tracking-widest transition duration-200"
                       placeholder="●●●●●●●●" required>
            </div>

            <!-- Register Button -->
            <div>
                <button type="submit"
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-300">
                    Register
                </button>
            </div>

            <!-- Redirect to Login View-->
            <div class="text-center mt-4">
                <p class="text-sm text-gray-500">
                    Already have an account?
                    <a href="/User/Login" class="text-green-600 hover:underline font-semibold">Login</a>
                </p>
            </div>
        </form>

    </div>
</div>
